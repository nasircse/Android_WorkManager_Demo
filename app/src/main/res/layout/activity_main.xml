<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_work_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_simple_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/simple_work" />

    <Button
        android:id="@+id/btn_cancel_simple_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_simple_work" />

    <Button
        android:id="@+id/btn_periodic_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/periodic_work" />

    <Button
        android:id="@+id/btn_cancel_periodic_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_periodic_work" />

</LinearLayout>